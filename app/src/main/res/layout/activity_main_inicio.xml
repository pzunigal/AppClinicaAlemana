<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityInicio">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="379dp"
        android:layout_height="239dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/clinicaalemana" />

        <TextView
            android:id="@+id/tvBienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BIENVENIDO"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="233dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#00A8A0"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btn_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00A8A0"
            android:onClick="ListaPaciente"
            android:text="Lista de Pacientes" />

        <Button
            android:id="@+id/btn_mapas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00A8A0"
            android:onClick="GPSMapasClinica"
            android:text="Ubicacion Clinica" />

        <Button
            android:id="@+id/btn_crearPaci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00A8A0"
            android:onClick="CrearPacienteClinic"
            android:text="Crear Paciente" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>